<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="well">
      <h1>{{model.title}}</h1>
      <p>{{model.body}}</p>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="well">
      <h4>Comments</h4>
      {{new-comment question=model saveComment="saveComment"}}
      {{#each model.comments as |comment|}}
      {{comment-tile comment=comment}}
      {{/each}}
    </div>
  </div>
</div>
