{{#if addingComment}}
  <div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h4>Enter Comment</h4>
    <form>
      <div class="form-group">
        <label for="commentUser">Enter username</label>
        {{input value=commentUser id="commentUser" class="form-control"}}
        <label for="commentBody">Enter comment</label>
        {{input value=commentBody id="commentBody" class="form-control"}}
      </div>
      <button class="btn btn-primary" {{action 'saveComment'}}>Submit</button>
    </form>
  </div>
</div>
{{else}}
  <button class="btn btn-primary" {{action 'showForm'}}>Add Comment</button>
{{/if}}
