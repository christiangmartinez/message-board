<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h3>Enter your question.</h3>
    <form>
      <label for="title">Question title</label>
      {{input value=title id="title" required="required" class="form-control"}}
      <label for="user">User name</label>
      {{input value=user id="user" required="required" class="form-control"}}
      <label for="body">Question</label>
      {{input value=body id="body" required="required" class="form-control"}}
      <button class="btn btn-primary" {{action 'saveQuestion'}}>Submit</button>
    </form>
  </div>
</div>
