<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h3>Enter your question.</h3>
    <form {{action 'saveQuestion' on="submit"}}>
      <label for="title">Question title</label>
      {{input value=title id="title" required=true class="form-control"}}
      <label for="user">User name</label>
      {{input value=user id="user" required=true class="form-control"}}
      <label for="body">Question</label>
      {{input value=body id="body" required=true class="form-control"}}
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>
